<config>
    <modules>
        <Radial_CreditCard>
            <version>1.4.0</version>
        </Radial_CreditCard>
    </modules>
    <global>
        <models>
            <radial_creditcard>
                <class>Radial_CreditCard_Model</class>
            </radial_creditcard>
        </models>
        <blocks>
            <radial_creditcard>
                <class>Radial_CreditCard_Block</class>
            </radial_creditcard>
        </blocks>
        <helpers>
            <radial_creditcard>
                <class>Radial_CreditCard_Helper</class>
            </radial_creditcard>
        </helpers>
	<events>
           <adminhtml_controller_action_predispatch_start>
                <observers>
                    <radial_creditcard_issue_cors_header_adminhtml>
                        <type>model</type>
                        <class>radial_creditcard/observer</class>
                        <method>issueCorsHeader</method>
                    </radial_creditcard_issue_cors_header_adminhtml>
                </observers>
            </adminhtml_controller_action_predispatch_start>
        </events>
    </global>
    <frontend>
	<events>
            <controller_action_predispatch_checkout_onepage_index>
                <observers>
                    <radial_creditcard_issue_cors_header_onepage>
                        <type>model</type>
                        <class>radial_creditcard/observer</class>
                        <method>issueCorsHeader</method>
                    </radial_creditcard_issue_cors_header_onepage>
                </observers>
            </controller_action_predispatch_checkout_onepage_index>
	    <controller_action_predispatch_checkout_multishipping_index>
                <observers>
                    <radial_creditcard_issue_cors_header_multiship>
                        <type>model</type>
                        <class>radial_creditcard/observer</class>
                        <method>issueCorsHeader</method>
                    </radial_creditcard_issue_cors_header_multiship>
                </observers>
            </controller_action_predispatch_checkout_multishipping_index>
	</events>
        <layout>
            <updates>
                <radial_creditcard>
                    <file>radial_creditcard.xml</file>
                </radial_creditcard>
            </updates>
        </layout>
        <translate>
            <modules>
                <Radial_CreditCard>
                    <files>
                        <default>Radial_CreditCard.csv</default>
                    </files>
                </Radial_CreditCard>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <radial_creditcard>
                    <file>radial_creditcard.xml</file>
                </radial_creditcard>
            </updates>
        </layout>
        <translate>
            <modules>
                <Radial_CreditCard>
                    <files>
                        <default>Radial_CreditCard.csv</default>
                    </files>
                </Radial_CreditCard>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <radial_creditcard>
                <model>radial_creditcard/method_ccpayment</model>
                <title>Credit Card (eBay Enterprise)</title>
                <order_status>pending</order_status>
                <cctypes>AE,VI,MC,DI</cctypes>
                <payment_action>authorize</payment_action>
                <allowspecific>0</allowspecific>
            </radial_creditcard>
        </payment>
        <radial_creditcard>
            <api>
                <service>payments</service>
                <operation_authorize>creditcard/auth</operation_authorize>
                <operation_confirm>funds/confirm</operation_confirm>
                <operation_capture>settlement/create</operation_capture>
                <operation_cancel>auth/cancel</operation_cancel>
            </api>
	    <braintree_filename>braintree.js</braintree_filename>
        </radial_creditcard>
    </default>
    <phpunit>
        <suite>
            <modules>
                <Radial_CreditCard/>
            </modules>
        </suite>
    </phpunit>
</config>
